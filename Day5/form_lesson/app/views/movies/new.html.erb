<h1>Add Movie</h1>

<form action="/movies" method="POST">
<%# to avoid csrf token error add the authenticity token as a hidden field %>
    <input type="hidden" name="authenticity_token" value="<% form_authenticity_token%>">
    <label>Title</label>
    <br>
    <input type="text" name="movie[:title]">
    <br>
    <br>
    <label>Rating</label>
    <br>
    <input type="number" name="movie[:rating]" min="0" max="10">
    <br>
    <br>
    <input type="submit" value="Submit">

</form>